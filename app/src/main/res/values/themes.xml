<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Hoply" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryVariant">@color/dark_orange</item>
        <item name="colorOnPrimary">@color/darker_orange</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/emerald_green</item>
        <item name="colorSecondaryVariant">@color/dark_emerald_green</item>
        <item name="colorOnSecondary">@color/dark_gray</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSecondaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground" tools:targetApi="l">?attr/colorSecondary</item>
        <item name="android:textColorHint" tools:targetApi="l">@color/gray</item>
        <item name="android:textViewStyle" tools:targestApi="l">@color/white</item>
    </style>
    <style name="Theme.Hoply.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.Hoply.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Hoply.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>