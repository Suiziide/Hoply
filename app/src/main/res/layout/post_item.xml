<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/dark_orange">

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:background="?attr/colorPrimary"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_view_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="User"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/darker_orange"
            />

        <TextView
            android:id="@+id/text_view_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="10"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:text="Content"
            android:textColor="@color/darker_orange" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="97dp"
                android:layout_height="match_parent"
                android:layout_marginStart="6dp"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/image_view_postLikeReactionsIMG"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:padding="3dp"
                    app:tint="@color/dark_emerald_green"
                    android:clickable="true"
                    android:src="@drawable/ic_like" />

                <TextView
                    android:id="@+id/text_view_postLikeReactions"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal|center"
                    android:padding="3dp"
                    android:text="0"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="97dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_view_postDislikeReactionsIMG"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:padding="3dp"
                    app:tint="@color/darker_orange"
                    android:clickable="true"
                    android:src="@drawable/ic_dislike" />

                <TextView
                    android:id="@+id/text_view_postDislikeReactions"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal|center"
                    android:padding="3dp"
                    android:text="0"
                    android:textSize="15sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="97dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_view_postNeutralReactionsIMG"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="3dp"
                    app:tint="@color/dark_gray"
                    android:clickable="true"
                    android:src="@drawable/ic_neutral" />

                <TextView
                    android:id="@+id/text_view_postNeutralReactions"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal|center"
                    android:padding="3dp"
                    android:text="0"
                    android:textSize="15sp" />
            </LinearLayout>

        <TextView
            android:id="@+id/clickable_text_view_View_comments"
            android:layout_width="69dp"
            android:layout_height="match_parent"
            android:text="View comments"
            android:paddingBottom="4dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="?attr/colorOnPrimary"
            android:clickable="true"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>